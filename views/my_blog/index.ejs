<%- include("../common/header.ejs") %>
    <h3>文章列表</h3>
    <hr>

    <ul class="list-group">
        <% list.forEach(item => { %>
            <li class="list-group-item">
                <span class="badge" style="background-color:#5bc0de;">
            <strong>发表时间：</strong><%= item.ctime %>
          </span>
                <span class="badge" style="background-color:#f0ad4e;">
            <strong>作者昵称：</strong><%= item.nickname %>
          </span>
                <a href="/article/info?id=<%= item.id %>">
                    <%= item.title %>
                </a>
            </li>
            <% }) %>
    </ul>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/?page=" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <li class="">
                <a href="/?page=">1</a>
                <a href="/?page=">2</a>
                <a href="/?page=">3</a>
            </li>

            <li>
                <a href="/?page=" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    <%- include("../common/footer.ejs") %>